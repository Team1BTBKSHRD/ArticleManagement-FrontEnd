    <div class="container">
      <!--action="index.html"  method="post" -->
        <form  id="loginForm" role="form">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 text-center">
                        <img src="img\logohrd.png" alt="HRD Login">
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <legend>Login</legend>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <label for="">User Name :</label>
                            <input type="text" id="username_login" class=" form-control" name="username" placeholder="Input User Name">
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <label for="">Password :</label>
                            <input type="password" id="pwd_login" class="pwd_login form-control" name="password" placeholder="Input Password">
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value=""> Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <label for="">Not yet have account?&nbsp;</label>
                            <label for=""><a href="sign-up.html">Register Now</a></label>
                        </div>
                    </div>
                   
                </div>
                <!--end of row-->
            </div>
        </form>
       <div class="col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-default" id="btn_submit">Submit</button>
                    </div>
    </div>
    <script>
    $(document).ready(function() {
        $('#loginForm').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                username: {
                    validators: {
                        notEmpty: {
                            message: 'The username is required'
                        }
                    }
                },
                password: {
                    validators: {
                        notEmpty: {
                            message: 'The password is required'
                        }
                    }
                }
            }
        });
       $("#btn_submit").click(function () {                    
         var name=document.getElementById("username_login").value;
    var pwd=document.getElementById("pwd_login").value;
    if(name=="admin" && pwd=="admin"){
      //window.open("./backend/dashboard.html", "_new");
      alert("ddd")
    }else if(name==""||pwd==""){
      alert("Please input again!!!");
      
    }else{
      //window.open("index.html", "_new");
      alert("eeee")
    }
                    
                });
      
      
    });
    </script>
